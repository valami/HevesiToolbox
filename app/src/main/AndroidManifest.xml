<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.valamas.hevesitoolbox" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
                android:theme="@style/AppTheme"
        android:value="@integer/google_play_services_version" >

        <meta-data android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />


        <activity
            android:name="hu.valamas.hevesitoolbox.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hu.valamas.hevesitoolbox.szamolasok.iranyszog"
            android:label="@string/title_activity_iranyszog">
        </activity>
        <activity
            android:name="hu.valamas.hevesitoolbox.szamolasok.polarispont"
            android:label="@string/title_activity_polarispont" >
        </activity>
        <activity
            android:name="hu.valamas.hevesitoolbox.szamolasok.numerikusterulet"
            android:label="Numerikus terület számítás" >
        </activity>
        <activity
            android:name="hu.valamas.hevesitoolbox.szamolasok.haromszog"
            android:label="@string/title_activity_haromszog" >
        </activity>
        <activity
            android:name="hu.valamas.hevesitoolbox.szamolasok.opengl.haromszograjz"
            android:label="@string/title_activity_haromszograjz" >
        </activity>
        <activity
            android:name="hu.valamas.hevesitoolbox.szamolasok.opengl.numerikusteruletrajz"
            android:label="@string/title_activity_numerikusteruletrajz" >
        </activity>
        <activity
            android:name="hu.valamas.hevesitoolbox.szamolasok.atvalto"
            android:label="@string/title_activity_atvalto" >
        </activity>

        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>
